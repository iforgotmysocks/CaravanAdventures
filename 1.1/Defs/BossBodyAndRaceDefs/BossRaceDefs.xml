<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<ThingDef ParentName="BaseMechanoid">
		<defName>CADevourer</defName>
		<label>Devourer</label>
		<description>Heavy combat mechanoids that glide on dozens of tiny legs. Their thick carpace and firepower makes them very effective against bunched-up static defenders. They are somewhat vulnerable to mobile hit-and-run tactics.</description>
		<statBases>
			<MoveSpeed>1.9</MoveSpeed>
			<ArmorRating_Blunt>0.22</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
			<PsychicSensitivity>0.75</PsychicSensitivity>
		</statBases>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>17</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<intelligence>ToolUser</intelligence>
			<thinkTreeMain>Mechanoid</thinkTreeMain>
			<body>MechanicalCentipede</body>
			<baseBodySize>3.2</baseBodySize>
			<baseHealthScale>12</baseHealthScale>
			<lifeStageAges>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
					<soundCall>Pawn_Mech_Centipede_Call</soundCall>
				</li>
			</lifeStageAges>
			<soundCallIntervalRange>1000~2000</soundCallIntervalRange>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<butcherProducts>
			<Steel>30</Steel>
			<Plasteel>10</Plasteel>
		</butcherProducts>
	</ThingDef>

	<PawnKindDef ParentName="BaseMechanoidKind">
		<defName>CADevourer</defName>
		<label>Devourer</label>
		<race>CADevourer</race>
		<combatPower>40000</combatPower>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/Centipede</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>6</drawSize>
					<shadowData>
						<volume>(0.6, 0.8, 0.6)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<weaponMoney>9999~9999</weaponMoney>
		<weaponTags>
			<li>MechanoidGunHeavy</li>
		</weaponTags>
	</PawnKindDef>
	
	
	<!-- CACrystalScythe -->

	<ThingDef ParentName="BaseMechanoidWalker">
		<defName>CACrystalScythe</defName>
		<label>Crystal scythe</label>
		<description>Fast, spindly, human-sized combat mechanoids specializing in rapid approach and close-range combat. Their bodies are covered in points and blades, but their mostly use two arm blades to lop off limbs or gut their victims alive.</description>
		<tools>
			<li>
				<label>left blade</label>
				<capacities>
					<li>Cut</li>
					<li>Stab</li>
				</capacities>
				<power>30</power>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>right blade</label>
				<capacities>
					<li>Cut</li>
					<li>Stab</li>
				</capacities>
				<power>30</power>
				<cooldownTime>1</cooldownTime>
				<linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>18</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<race>
			<body>Scyther</body>
			<baseHealthScale>4.32</baseHealthScale>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
		</race>
	</ThingDef>

