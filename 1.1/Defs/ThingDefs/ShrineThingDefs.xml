<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>CAEntranceLight</defName>
		<label>Entrance lighting</label>
		<description>Entrance lighting</description>
		<graphicData>
			<texPath>Things/Building/Misc/Empty</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>false</selectable>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(0,0,255,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>3.5</heatPerSecond>
				<heatPushMaxTemperature>23</heatPushMaxTemperature>
			</li>
		</comps>
		<building>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<deconstructible>false</deconstructible>
		</building>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>CARedLight</defName>
		<label>Red light</label>
		<description>Red lighting</description>
		<graphicData>
			<texPath>Things/Building/Misc/Empty</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>false</selectable>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>5</glowRadius>
				<glowColor>(255,0,0,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>3.5</heatPerSecond>
				<heatPushMaxTemperature>23</heatPushMaxTemperature>
			</li>
		</comps>
		<building>
			<isInert>true</isInert>
			<isEdifice>false</isEdifice>
			<deconstructible>false</deconstructible>
		</building>
	</ThingDef>

</Defs>